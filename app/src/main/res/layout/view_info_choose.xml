<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="@string/input_title"
            android:textColor="@color/color_9395A8"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:background="@null"
                android:text="@string/input_hint_choose"
                android:textColor="@color/color_E6E9EE"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="48dp"
                android:paddingTop="4dp"
                android:paddingRight="17dp"
                android:paddingBottom="4dp"
                android:src="@mipmap/ic_arrow_right" />
        </RelativeLayout>

        <View
            android:id="@+id/line_gender_correct"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_CCCEDD" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_error_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/line_error"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_EA766B" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="@string/input_error"
            android:textColor="@color/color_EA766B"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>